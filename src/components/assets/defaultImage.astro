---
import { Image } from "astro:assets";

interface Props {
  src: string | null;
  alt?: string | null;
  size?: {
    width: number;
    height: number;
  };
}

const { src, alt, size, ...attrs } = Astro.props;

const imageAlt = alt ? alt : "Not found";
---

<Image
  class:list={["m-auto rounded-sm"]}
  src={`/api/image?path=${src}`}
  alt={imageAlt}
  inferSize={true}
  width={size?.width || 1920}
  height={size?.width || 1080}
  layout="responsive"
  fit="contain"
  {...attrs}
/>
