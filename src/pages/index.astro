---
import MainLayout from "@layouts/mainLayout.astro";
import Carousel from "@components/carousel.astro";

const title = "Astro Chef";
---

<MainLayout title={title}>
  <span class="text-center text-6xl text-rosePine-text font-bold pb-6">
    Welcome to astro Chef
  </span>

  <div class="flex flex-col gap-5">
    <!-- TODO: add recipe cards here, ideally on a carousel -->
    <span class="text-rosePine-text font-bold text-center text-5xl">
      Random
    </span>
    <Carousel type="random" />
    <span class="text-rosePine-text font-bold text-center text-5xl">
      Popular
    </span>
    <Carousel type="popular" />
    <span class="text-rosePine-text font-bold text-center text-5xl">
      Liked
    </span>
    <Carousel type="random" filters={["liked"]} />
  </div>
</MainLayout>
