{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "outDir": "./app/assets/builds",
    "rootDir": "./app/javascript",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "app/javascript/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}