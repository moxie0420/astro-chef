{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@db/*": ["db/*"],
      "@public/*": ["public/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/css/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": [
      "vite-plugin-solid-svg/types",
      "vite-plugin-pwa/client",
      "vite-plugin-pwa/info"
    ]
  },
  "watchOptions": {
    "excludeDirectories": ["./node_modules"]
  },
  "extends": "astro/tsconfigs/strict"
}
